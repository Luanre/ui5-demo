<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.ui.commons"
			controllerName="coreViews.main" xmlns:html="http://www.w3.org/1999/xhtml"
			xmlns:layout="sap.ui.layout" xmlns:ux3="sap.ui.ux3">
	<layout:VerticalLayout>
		<ApplicationHeader 
			logoSrc="img/openui5_logo.png"
			logoText="{i18n>headerLogoText}"
			userName="%USERNAME%"
			displayWelcome="true"
			displayLogoff="true"
		/>
		<ux3:NavigationBar>
			<ux3:NavigationItem text="{i18n>navTextEditor}" href="#text"/>
			<ux3:NavigationItem text="{i18n>navTable}" href="#table"/>
		</ux3:NavigationBar>
		<layout:VerticalLayout id="viewContainer"/>
		<MenuBar>
			<MenuItem text="{i18n>menuFile}">
				<Menu>
					<MenuItem text="{i18n>menuFileNew}" />
					<MenuItem text="{i18n>menuFileOpen}" />
					<MenuItem text="{i18n>menuFileSave}" />
					<MenuItem text="{i18n>menuFileSaveAs}" />
				</Menu>
			</MenuItem>
			<MenuItem text="{i18n>menuHelp}">
				<Menu>
					<MenuItem text="{i18n>menuHelpAbout}" />
				</Menu>
			</MenuItem>
		</MenuBar>
		<TextArea value="{/fileContents}"/>
	</layout:VerticalLayout>
</core:View>
